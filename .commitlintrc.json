{
    "extends": [
        "@commitlint/config-conventional"
    ],
    "rules": {
        "subject-case": [
            2,
            "always", [
                "sentence-case",
                "start-case",
                "pascal-case",
                "upper-case",
                "lower-case",
                "camel-case",
                "kebab-case",
                "snake-case"
            ]
        ],
        "type-enum": [
            2,
            "always", [
                "ci",
                "chore",
                "docs",
                "feat",
                "fix",
                "perf",
                "refactor",
                "revert",
                "style",
                "build",
                "test",
                "sample"
            ]
        ]
    },
    "prompt": {
        "questions": {
            "type": {
                "description": "please input type:"
            }
        }
    }
}